class sampleTextScrolling extends inkLogicController
{
	editable var scrollingText : inkTextRef;
	private var infiniteloop : inkAnimOptions;

	protected event OnInitialize()
	{
		infiniteloop.loopType = inkanimLoopType.Cycle;
		infiniteloop.loopInfinite = true;
		PlayLibraryAnimation( 'scrolltext', infiniteloop );
	}

}

