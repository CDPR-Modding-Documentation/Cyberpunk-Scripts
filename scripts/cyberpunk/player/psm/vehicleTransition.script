		ApplyWeaponFxScalings();
		if( WeaponObject.GetWeaponType( m_activeWeapons[ 0 ].GetItemID() ) == gamedataItemType.Wea_VehiclePowerWeapon )
		{
			SetWeaponPreviews( false, scriptInterface );
			SetWeaponPreviews( true, scriptInterface );
		}
