{
	HitByLightAttack = 0,
	HitByStrongAttack = 1,
	HitByFinalComboAttack = 2,
	HitByBlockAttack = 3,
	BlockedAttack = 4,
	DeflectedAttack = 5,
	WasGuardBreaked = 6,
}

enum EDownedType
{
	Killed = 0,
	Finished = 1,
	Defeated = 2,
	Unconscious = 3,
}

