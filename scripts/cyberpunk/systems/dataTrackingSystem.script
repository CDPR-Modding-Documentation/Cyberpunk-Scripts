{
	MeleeAttacksMade = 0,
	RangedAttacksMade = 1,
	BluelinesSelected = 2,
	MeleeKills = 3,
	RangedKills = 4,
	QuickHacksMade = 5,
	LegendaryItemsCrafted = 6,
}

