		{
			return ( ( PlayerSpotted )( NULL ) );
		}
		ps = new PlayerSpotted;
		ps.comesFromNPC = isReporterNPC;
		ps.ownerID = owner;
		ps.doesSee = doSee;
		ps.agentAreas = areas;
		return ps;
	}

