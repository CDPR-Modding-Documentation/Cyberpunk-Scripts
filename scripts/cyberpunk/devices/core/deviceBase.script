	{
		var baseData : BaseDeviceData;
		var resaveData : BaseResaveData;
		var psDevice : ScriptableDeviceComponentPS;
		baseData.m_deviceState = m_deviceState;
		baseData.m_durabilityType = m_durabilityType;
