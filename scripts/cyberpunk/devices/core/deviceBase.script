{
	if( action1.GetCurrentDisplayString() == action2.GetCurrentDisplayString() )
	{
		if( action1.GetPersistentID() == action2.GetPersistentID() )
		{
			return true;
		}
	}
	return false;
}

operator==( action1 : PuppetAction, action2 : PuppetAction ) : Bool
