	protected event OnDeviceVisible( evt : gameDeviceVisibilityChangedEvent )
	{
		if( evt.isVisible == ( ( Uint32 )( 1 ) ) )
		{
			m_isVisible = true;
			if( !( m_wasVisible ) )
			{
				m_wasVisible = true;
				ResolveGameplayStateByTask();
			}
		}
		else
		{
			m_isVisible = false;
		}
		OnVisibilityChanged();
	}

