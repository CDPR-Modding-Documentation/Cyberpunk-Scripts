		else if( m_itemFilterType == ItemFilterCategory.NewWardrobeAppearances )
		{
			return ( ( m_wrappedData.IsNotInWardrobe ) ? ( DerivedFilterResult.True ) : ( DerivedFilterResult.False ) );
