		inkWidgetRef.SetVisible( m_unlockInfoWrapper, data.traitData.m_locked );
		inkWidgetRef.SetVisible( m_unlockPerkWrapper, false );
		inkWidgetRef.SetVisible( m_unlockTraitWrapper, true );
