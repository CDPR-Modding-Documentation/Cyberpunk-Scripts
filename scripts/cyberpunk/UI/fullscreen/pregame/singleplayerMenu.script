	private function ShowRussianLanguageDisclaimer()
	{
		var voName : CName;
		var voVar : ConfigVarListName;
		if( !( m_uiSystem ) )
		{
			m_uiSystem = GameInstance.GetUISystem( GetPlayerControlledObject().GetGame() );
		}
		voVar = ( ( ConfigVarListName )( GetSystemRequestsHandler().GetUserSettings().GetVar( '/language', 'VoiceOver' ) ) );
		if( voVar )
		{
			voName = voVar.GetValue();
			if( voName == 'ru-ru' )
			{
				GetSystemRequestsHandler().RequestSystemNotificationGeneric( 'UI-SystemNotification-ruVO-LaunchPopUpHeader', 'UI-SystemNotification-ruVO-LaunchPopUpMessage' );
			}
		}
	}

	private function ShowExpansionError( error : ExpansionErrorType )
	{
		var errTitle, errDescription : CName;
		switch( error )
		{
			case ExpansionErrorType.PurchaseFailed:
				errTitle = 'UI-DLC-EP1-Errors-PurchaseFailed_Title';
			errDescription = 'UI-DLC-EP1-Errors-PurchaseFailed_Description';
			break;
			case ExpansionErrorType.PurchaseDisabled:
				errTitle = 'UI-DLC-EP1-Errors-PurchaseDisabled_Title';
			errDescription = 'UI-DLC-EP1-Errors-PurchaseDisabled_Description';
			break;
			case ExpansionErrorType.InstallFailed:
				errTitle = 'UI-DLC-EP1-Errors-InstallFailed_Title';
			errDescription = 'UI-DLC-EP1-Errors-InstallFailed_Description';
			break;
			case ExpansionErrorType.InstallRequestFailed:
				errTitle = 'UI-DLC-EP1-Errors-InstallRequestFailed_Title';
			errDescription = 'UI-DLC-EP1-Errors-InstallRequestFailed_Description';
			break;
			case ExpansionErrorType.InstallDisabled:
				errTitle = 'UI-DLC-EP1-Errors-InstallDisabled_Title';
			errDescription = 'UI-DLC-EP1-Errors-InstallDisabled_Description';
			break;
		}
		if( ( ( GetPlatformShortName() == "xseriesx" || GetPlatformShortName() == "xseriess" ) && errTitle != '' ) && errDescription != '' )
		{
			errTitle = errTitle + '_XSX';
			errDescription = errDescription + '_XSX';
		}
		if( ( GetPlatformShortName() == "ps5" && errTitle != '' ) && errDescription != '' )
		{
			errTitle = errTitle + '_PS5';
			errDescription = errDescription + '_PS5';
		}
		PushNotification( errTitle, errDescription );
	}

	private function DBG_ShowAccountButton()
	{
		if( m_accountSelectorController )
		{
			m_accountSelectorController.ShowAccountButton();
		}
	}

}

enum ExpansionErrorType
{
	PurchaseFailed = 0,
	PurchaseDisabled = 1,
	InstallFailed = 2,
	InstallRequestFailed = 3,
	InstallDisabled = 4,
}

