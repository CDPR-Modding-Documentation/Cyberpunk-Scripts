		if( !( m_inputDisabled ) )
		{
			if( e.IsAction( 'click' ) )
			{
				Next();
			}
		}
	}

	protected event OnPrev( e : inkPointerEvent )
	{
		if( !( m_inputDisabled ) )
		{
			if( e.IsAction( 'click' ) )
			{
				Previous();
			}
		}
	}

	protected event OnShortcutPress( e : inkPointerEvent )
	{
		if( !( m_inputDisabled ) )
		{
			if( !( e.IsHandled() ) )
			{
				if( e.IsAction( 'option_switch_prev' ) )
				{
					PlaySound( 'Button', 'OnPress' );
					Previous();
					e.Handle();
				}
				else if( e.IsAction( 'option_switch_next' ) )
				{
					PlaySound( 'Button', 'OnPress' );
					Next();
					e.Handle();
				}
			}
