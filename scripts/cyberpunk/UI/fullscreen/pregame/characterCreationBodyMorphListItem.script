				inkImageRef.SetTexturePart( m_selectorTexture, 'cell_gallery_centre' );
				inkImageRef.SetTexturePart( m_arrowsTexture, 'arrow_gal_centre' );
				m_isPrevOrNextBtnHoveredOver = false;
