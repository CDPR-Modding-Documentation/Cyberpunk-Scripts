	{
		var data : TutorialOverlayData;
		data.itemName = 'Root';
		data.widgetLibraryResource = R"base\gameplay\gui\widgets\tutorial\vr_minigame_tutorial.inkwidget";
		if( value )
		{
			m_uiSystem.ShowTutorialOverlay( data );
		}
		else
		{
			m_uiSystem.HideTutorialOverlay( data );
