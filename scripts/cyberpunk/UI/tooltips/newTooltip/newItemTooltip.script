	{
		inkTextRef.SetText( m_descriptionText, data.gameplayDescription );
	}

	public override function NEW_Update( data : weak< UIInventoryItem > )
	{
		var description : String;
		var isBottomHidden : Bool;
		var margin : inkMargin;
