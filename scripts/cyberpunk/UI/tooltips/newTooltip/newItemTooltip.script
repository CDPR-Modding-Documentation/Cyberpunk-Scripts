			}
			if( !( isBroken ) && data.GetItemType() != gamedataItemType.Invalid )
			{
				inkImageRef.SetTexturePart( m_itemWeaponIcon, UIItemsHelper.GetWeaponTooltipIcon( data.GetItemType() ) );
