	private function HandleItemClick( const itemData : ref< InventoryItemData >, actionName : inkActionName, optional displayContext : ItemDisplayContext, optional isPlayerLocked : Bool )
	{
		var item : ItemModParams;
		var isEquippedItemBlocked, shouldUpdate : Bool;
		var isClothing : Bool;
		var localEquippedData : weak< gameItemData >;
		if( actionName.IsAction( 'drop_item' ) )
		{
			if( ( m_playerState == gamePSMVehicle.Default && !( InventoryItemData.IsEquipped( itemData ) ) ) && RPGManager.CanItemBeDropped( m_player, InventoryItemData.GetGameItemData( itemData ) ) )
			{
				if( isPlayerLocked )
				{
					ShowNotification( m_player.GetGame(), UIMenuNotificationType.InventoryActionBlocked );
					return;
				}
				if( InventoryItemData.GetQuantity( itemData ) > 1 )
				{
					OpenQuantityPicker( itemData, QuantityPickerActionType.Drop );
				}
				else
				{
					item.itemID = InventoryItemData.GetID( itemData );
					item.quantity = 1;
					AddToDropQueue( item );
					RefreshAvailableItems();
					PlaySound( 'Item', 'OnDrop' );
					PlayRumble( RumbleStrength.SuperLight, RumbleType.Pulse, RumblePosition.Right );
				}
			}
		}
		else if( ( ( actionName.IsAction( 'preview_item' ) && ( InventoryItemData.IsWeapon( itemData ) || InventoryItemData.IsGarment( itemData ) ) ) && !( InventoryItemData.IsEmpty( itemData ) ) ) && displayContext == ItemDisplayContext.Backpack )
		{
			isClothing = IsEquipmentAreaClothing( InventoryItemData.GetEquipmentArea( itemData ) ) || InventoryItemData.GetEquipmentArea( itemData ) == gamedataEquipmentArea.Outfit;
			m_itemPreviewPopupToken = ItemPreviewHelper.ShowPreviewItem( this, itemData, isClothing, 'OnItemPreviewPopup' );
		}
		else if( ( actionName.IsAction( 'click' ) && displayContext != ItemDisplayContext.Attachment ) && !( ( InventoryItemData.IsEquipped( itemData ) && m_currentHotkey == EHotkey.INVALID ) ) )
		{
			localEquippedData = InventoryItemData.GetGameItemData( itemChooser.GetModifiedItemData() );
			if( ( RPGManager.IsWeaponMod( itemData.ItemType ) && localEquippedData.HasPartInSlot( itemChooser.GetSelectedSlotID() ) ) && !( localEquippedData.HasTag( 'IconicWeapon' ) ) )
			{
				ShowNotification( m_player.GetGame(), UIMenuNotificationType.InventoryNoFreeSlot );
				return;
			}
			shouldUpdate = true;
			isEquippedItemBlocked = localEquippedData.HasTag( 'UnequipBlocked' );
			if( isEquippedItemBlocked || !( InventoryGPRestrictionHelper.CanEquip( itemData, m_player ) ) )
			{
				ShowNotification( m_player.GetGame(), DetermineUIMenuNotificationType() );
				return;
			}
			EquipItem( itemData, itemChooser.GetSlotIndex() );
			PlayRumble( RumbleStrength.Heavy, RumbleType.Pulse, RumblePosition.Right );
			if( m_lastEquipmentAreas.Contains( gamedataEquipmentArea.Outfit ) )
			{
				if( m_wardrobeSystem.GetActiveClothingSetIndex() != gameWardrobeClothingSetIndex.INVALID && InventoryItemData.IsEmpty( itemData ) )
				{
					shouldUpdate = false;
				}
			}
			itemChooser.RefreshItems( shouldUpdate, -1 );
			if( !( InventoryItemData.IsPart( itemData ) ) )
			{
				m_viewMode = ItemViewModes.Item;
				m_currentFilter = ItemFilterCategory.Invalid;
				RefreshAvailableItems();
			}
			NotifyItemUpdate();
		}
	}

