	{
		m_TooltipsManager.HideTooltips();
	}

	private function SetInventoryItemButtonHintsHoverOver( const displayingData : ref< InventoryItemData >, optional display : InventoryItemDisplayController )
	{
		var cursorData : MenuCursorUserData;
		var isEquippedOrAttachment : Bool;
		var equipmentArea : gamedataEquipmentArea;
		var equippedItem : InventoryItemData;
		cursorData = new MenuCursorUserData;
		isEquippedOrAttachment = InventoryItemData.IsEquipped( displayingData ) || this.itemChooser.IsAttachmentItem( displayingData );
		if( display )
		{
			if( !( InventoryItemData.IsEmpty( displayingData ) ) )
			{
				if( itemChooser.CanEquipVisuals( InventoryItemData.GetID( displayingData ) ) )
				{
					m_buttonHintsController.AddButtonHint( 'equip_visuals', GetLocalizedText( "UI-UserActions-EquipVisuals" ) );
				}
				else
				{
					m_buttonHintsController.RemoveButtonHint( 'equip_visuals' );
				}
				if( !( isEquippedOrAttachment ) )
				{
					if( ( ( ( ( m_playerState == gamePSMVehicle.Default && RPGManager.CanItemBeDropped( m_player, InventoryItemData.GetGameItemData( displayingData ) ) ) && InventoryItemData.GetItemType( displayingData ) != gamedataItemType.Prt_Program ) && InventoryItemData.GetItemType( displayingData ) != gamedataItemType.Gad_Grenade ) && InventoryItemData.GetItemType( displayingData ) != gamedataItemType.Con_Inhaler ) && InventoryItemData.GetItemType( displayingData ) != gamedataItemType.Con_Injector )
					{
						m_buttonHintsController.AddButtonHint( 'drop_item', GetLocalizedText( "UI-ScriptExports-Drop0" ) );
					}
					if( !( InventoryItemData.IsPart( displayingData ) ) )
					{
						if( InventoryItemData.GetEquipmentArea( displayingData ) != gamedataEquipmentArea.Invalid )
						{
							m_buttonHintsController.AddButtonHint( 'equip_item', GetLocalizedText( "UI-UserActions-Equip" ) );
						}
					}
					else
					{
						if( RPGManager.IsWeaponMod( displayingData.ItemType ) )
						{
							equippedItem = itemChooser.GetSelectedItem().GetItemData();
							if( equippedItem.Empty )
							{
								m_buttonHintsController.AddButtonHint( 'equip_item', GetLocalizedText( "UI-UserActions-Equip" ) );
							}
						}
						else
						{
							m_buttonHintsController.AddButtonHint( 'equip_item', GetLocalizedText( "UI-UserActions-Equip" ) );
						}
					}
					equipmentArea = InventoryItemData.GetEquipmentArea( displayingData );
					if( ( IsEquipmentAreaClothing( equipmentArea ) || IsEquipmentAreaWeapon( equipmentArea ) ) || equipmentArea == gamedataEquipmentArea.Outfit )
					{
						m_buttonHintsController.AddButtonHint( 'preview_item', "UI-UserActions-ItemPreview" );
					}
					m_buttonHintsController.RemoveButtonHint( 'favourite_item' );
					if( IsEquipmentAreaWeapon( equipmentArea ) )
					{
						UpdateFavouriteHint( InventoryItemData.GetID( displayingData ) );
					}
					if( display.GetDisplayContext() == ItemDisplayContext.Attachment )
					{
						m_buttonHintsController.RemoveButtonHint( 'drop_item' );
						m_buttonHintsController.RemoveButtonHint( 'equip_item' );
						if( RPGManager.CanPartBeUnequipped( displayingData, display.GetSlotID() ) )
						{
							m_buttonHintsController.AddButtonHint( 'unequip_item', GetLocalizedText( "UI-UserActions-Unequip" ) );
						}
						else
						{
							m_buttonHintsController.RemoveButtonHint( 'unequip_item' );
						}
					}
				}
				else
				{
					if( ( !( InventoryItemData.IsPart( displayingData ) ) || RPGManager.CanPartBeUnequipped( displayingData, display.GetSlotID() ) ) && !( IsItemCyberware( displayingData.ItemType ) ) )
					{
						m_buttonHintsController.AddButtonHint( 'unequip_item', GetLocalizedText( "UI-UserActions-Unequip" ) );
					}
				}
				if( !( m_isE3Demo ) )
				{
					if( RPGManager.CanItemBeDisassembled( m_player.GetGame(), InventoryItemData.GetID( displayingData ) ) && !( isEquippedOrAttachment ) )
					{
						m_buttonHintsController.AddButtonHint( 'disassemble_item', ( ( "[" + GetLocalizedText( "Gameplay-Devices-Interactions-Helpers-Hold" ) ) + "] " ) + GetLocalizedText( "UI-ScriptExports-Disassemble0" ) );
						cursorData.AddAction( 'disassemble_item' );
					}
				}
				if( InventoryItemData.GetEquipmentArea( displayingData ) == gamedataEquipmentArea.Consumable )
				{
					if( InventoryItemData.GetItemType( displayingData ) != gamedataItemType.Con_Inhaler && InventoryItemData.GetItemType( displayingData ) != gamedataItemType.Con_Injector )
					{
						m_buttonHintsController.AddButtonHint( 'use_item', ( ( "[" + GetLocalizedText( "Gameplay-Devices-Interactions-Helpers-Hold" ) ) + "] " ) + GetLocalizedText( "UI-UserActions-Use" ) );
						cursorData.AddAction( 'use_item' );
					}
				}
			}
			else if( display.GetWardrobeOutfitIndex() >= 0 )
			{
				m_buttonHintsController.AddButtonHint( 'unequip_item', GetLocalizedText( "UI-UserActions-Unequip" ) );
			}
			if( cursorData.GetActionsListSize() >= 0 )
			{
				SetCursorContext( 'HoldToComplete', cursorData );
			}
			else
			{
				SetCursorContext( 'Hover' );
			}
		}
		else
		{
			SetCursorContext( 'Default' );
		}
	}

