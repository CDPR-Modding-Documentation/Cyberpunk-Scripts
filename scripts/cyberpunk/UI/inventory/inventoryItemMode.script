		else if( m_isShown )
		{
			if( ( ( evt.actionName.IsAction( 'favourite_item' ) && !( InventoryItemData.IsEmpty( evt.itemData ) ) ) && InventoryItemData.IsWeapon( evt.itemData ) ) && !( IsItemCyberware( InventoryItemData.GetItemType( evt.itemData ) ) ) )
			{
