	{
		if( GameStarted() )
		{
			GetRootWidget().SetVisible( IsDerivedHUDVisible() && TutorialActivated() );
		}
		else
		{
			if( !( TutorialActivated() ) )
			{
				GetRootWidget().SetVisible( IsDerivedHUDVisible() );
			}
		}
	}

	protected virtual function IsDerivedHUDVisible() : Bool
	{
		return true;
	}

