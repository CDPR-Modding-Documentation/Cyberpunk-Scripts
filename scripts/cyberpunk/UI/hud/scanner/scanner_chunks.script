	{
		var i : Int32;
		for( i = 0; i < m_asyncSpawnRequests.Size(); i += 1 )
		{
			if( m_asyncSpawnRequests[ i ] == request )
			{
				m_asyncSpawnRequests[ i ] = NULL;
				m_asyncSpawnRequests.Erase( i );
				break;
			}
		}
	}

	private function ClearAllAsyncSpawnRequests()
	{
		var i : Int32;
		for( i = 0; i < m_asyncSpawnRequests.Size(); i += 1 )
		{
