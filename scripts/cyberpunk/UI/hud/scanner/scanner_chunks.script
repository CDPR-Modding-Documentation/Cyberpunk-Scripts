	{
		m_selectedData = ( ( QuickhackData )value );
		m_equippedQuickHackData = EquippedQuickHackData.Make( m_player );
		if( m_selectedData )
		{
			inkTextRef.SetLocalizedTextScript( m_subHeader, m_selectedData.m_title );
			SetupTier();
			SetupDuration();
			SetupMaxCooldown();
			SetupUploadTime();
			SetupMemoryCost();
