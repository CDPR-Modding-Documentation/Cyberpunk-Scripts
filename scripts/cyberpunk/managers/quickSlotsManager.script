		item = EquipmentSystem.GetData( m_Player ).GetActiveItem( gamedataEquipmentArea.ArmsCW );
		if( ItemID.IsValid( item ) )
		{
			record = TweakDBInterface.GetItemRecord( ItemID.GetTDBID( item ) );
